{
  "$schema": "http://json-schema.org/schema",
  "$id": "GradleApplication",
  "title": "Gradle Application Generator",
  "description": "Generate a Gradle application.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the application.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the application?",
      "x-priority": "important"
    },
    "directory": {
      "description": "The directory of the new application.",
      "type": "string",
      "alias": "d",
      "x-priority": "important"
    },
    "language": {
      "description": "Implementation language",
      "type": "string",
      "enum": ["java", "groovy", "kotlin"],
      "x-prompt": "What is the implementation language?",
      "x-priority": "important"
    },
    "sourcePackage": {
      "description": "The package name for source files.",
      "type": "string",
      "alias": "p",
      "x-priority": "important",
      "examples:": ["com.example", "demo"],
      "x-prompt": "What is the source package?"
    },
    "dsl": {
      "type": "string",
      "description": "The build script DSL to use.",
      "enum": ["groovy", "kotlin"],
      "default": "groovy",
      "x-prompt": "What build script DSL would you like to use?"
    },
    "javaVersion": {
      "description": "Java version",
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "number"
        }
      ],
      "x-priority": "important",
      "default": "18",
      "x-prompt": "What version of Java would you like to use? (min: 7, default: 18)"
    },
    "rootProjectName": {
      "type": "string",
      "description": "Root project name",
      "x-prompt": "What root project name would you like to use?"
    }
  },
  "required": ["name", "language", "sourcePackage"]
}
